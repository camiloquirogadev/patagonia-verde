    "@testing-library/user-event": "^14.6.1",
    "@types/cors": "^2.8.18",
    "@types/date-fns": "^2.6.3",
    "axios": "^1.9.0",
    "chart.js": "^4.4.9",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "leaflet": "^1.9.4",
