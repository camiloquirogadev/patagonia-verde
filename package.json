{
  "name": "patagonia-verde",
  "description": "Sistema de monitoreo de incendios forestales en la Patagonia",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "author": "Camilo Quiroga <camiloquirogadev@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/camiloquirogadev/patagonia-verde.git"
  },
  "keywords": [
    "incendios",
    "patagonia",
    "monitoreo",
    "fires",
    "monitoring",
    "react",
    "typescript",
    "leaflet",
    "charts"
  ],
  "scripts": {
