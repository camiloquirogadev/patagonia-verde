{
  "name": "patagonia-verde",
  "description": "Sistema de monitoreo geoespacial de incendios forestales en la Patagonia argentina utilizando datos satelitales NASA FIRMS y tecnologías GIS/geomática",
  "version": "1.3.0",
  "private": true,
  "type": "module",
  "author": "Camilo Quiroga <quirogacamilodev@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/camiloquirogadev/patagonia-verde.git"
  },
  "keywords": [
    "fire-monitoring",
    "patagonia",
    "geospatial",
    "gis",
    "geomatics",
    "nasa-firms",
    "forest-fires",
    "satellite-data",
    "environmental-monitoring",
    "react",
    "typescript",
    "leaflet",
    "charts",
    "spatial-analysis"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "deploy": "npm run build && vercel --prod"
  },
  "dependencies": {
    "@fontsource/inter": "^5.2.5",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/cors": "^2.8.18",
    "@types/date-fns": "^2.6.3",
    "@vercel/speed-insights": "^1.2.0",
    "chart.js": "^4.4.9",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "leaflet": "^1.9.4",
    "react": "^19.1.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/leaflet": "^1.9.20",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "jsdom": "^27.0.0",
    "msw": "^2.12.3",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  }
}
