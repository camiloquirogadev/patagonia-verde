# EditorConfig para Patagonia Verde
# Asegura consistencia de formato en todos los editores
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[*.json]
indent_size = 2

[*.{js,jsx,ts,tsx}]
indent_size = 2

[*.css]
indent_size = 2

[*.html]
indent_size = 2

[*.csv]
trim_trailing_whitespace = false